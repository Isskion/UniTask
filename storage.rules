rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Default: BLOCK ALL
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Profile Pictures: /users/{userId}/avatar.png
    match /users/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Tenant Assets: /tenants/{tenantId}/...
    match /tenants/{tenantId}/{allPaths=**} {
      // Read: If user belongs to tenant (custom claim or lookup - simplification: any auth for now, or strict?)
      // For strict multi-tenant, we need a custom claim `tenantId`.
      // Assuming custom claims are set:
      allow read: if isAuthenticated() && request.auth.token.tenantId == tenantId;
      allow write: if isAuthenticated() && request.auth.token.tenantId == tenantId;
    }
    
    // Explicit rule for task attachments (Nested under tenants for security)
    // Path: /tenants/{tenantId}/tasks/{taskId}/attachments/{fileName}
    // This is covered by the recursive rule above, but explicit is fine too if we deviate.
  }
}
