rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Explicit rule for attachments
    match /tenants/{tenantId}/tasks/{taskId}/attachments/{fileName} {
      allow read, write: if request.auth != null;
    }
  }
}
